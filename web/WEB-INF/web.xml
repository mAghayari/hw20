<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>authenticationServlet</servlet-name>
        <servlet-class>servlets.AuthenticationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>authenticationServlet</servlet-name>
        <url-pattern>/authentication</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registrationServlet</servlet-name>
        <servlet-class>servlets.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registrationServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>nameFilter</filter-name>
        <filter-class>filters.registration.NameFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>nameFilter</filter-name>
        <url-pattern>/registration</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>emailFilter</filter-name>
        <filter-class>filters.registration.EmailFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>emailFilter</filter-name>
        <url-pattern>/registration</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>mobileFilter</filter-name>
        <filter-class>filters.registration.MobileFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>mobileFilter</filter-name>
        <url-pattern>/registration</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>userNameFilter</filter-name>
        <filter-class>filters.registration.UserNameFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>userNameFilter</filter-name>
        <url-pattern>/registration</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>passwordFilter</filter-name>
        <filter-class>filters.registration.PasswordFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>passwordFilter</filter-name>
        <url-pattern>/registration</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>addBook</servlet-name>
        <servlet-class>servlets.AddBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addBook</servlet-name>
        <url-pattern>/addBook</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>authorFilter</filter-name>
        <filter-class>filters.addbook.AuthorFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authorFilter</filter-name>
        <url-pattern>/addBook</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>DeleteServlet</servlet-name>
        <servlet-class>servlets.DeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteServlet</servlet-name>
        <url-pattern>/deleteBook</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditServlet</servlet-name>
        <servlet-class>servlets.EditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditServlet</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditBookServlet</servlet-name>
        <servlet-class>servlets.SubmitEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditBookServlet</servlet-name>
        <url-pattern>/editBook</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>authorNameFilter</filter-name>
        <filter-class>filters.editbook.AuthorNameFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authorNameFilter</filter-name>
        <url-pattern>/editBook</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>ViewServlet</servlet-name>
        <servlet-class>servlets.ViewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewServlet</servlet-name>
        <url-pattern>/viewBook</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>servlets.SearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/searchBook</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

